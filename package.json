{
  "name": "project-manager",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo -p 3244",
    "build": "next build",
    "start": "node start.js",
    "lint": "next lint",
    "migrate:todoist": "tsx scripts/migrate-todoist.ts",
    "create-users": "node scripts/create-users.mjs",
    "migrate:supabase": "node scripts/migrate-to-supabase.mjs",
    "mobile:init": "npm install @capacitor/core @capacitor/ios @capacitor/cli --save-exact",
    "mobile:build": "npm run build && npm run mobile:export",
    "mobile:export": "next export -o mobile/dist",
    "mobile:sync": "cd mobile && npx cap sync",
    "mobile:open": "cd mobile && npx cap open ios",
    "mobile:run": "cd mobile && npx cap run ios",
    "ios:build": "npm run mobile:build && npm run mobile:sync",
    "ios:dev": "npm run ios:build && npm run mobile:open"
  },
  "dependencies": {
    "@capacitor/cli": "7.4.2",
    "@capacitor/core": "7.4.2",
    "@capacitor/ios": "7.4.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.536.0",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.14",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "node-fetch": "^2.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

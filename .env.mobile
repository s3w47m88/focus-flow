# Mobile-specific environment configuration
# This file is used when building for iOS/mobile deployment

# Next.js
NODE_ENV=production

# Database
DATABASE_PATH=./data/database.json

# Database Adapter Selection
# Mobile uses Supabase for cloud sync
USE_SUPABASE=true

# Supabase Configuration (required for mobile)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Feature Flags
# Mobile requires authentication
REQUIRE_AUTH=true

# Platform detection
IS_MOBILE=true

# Mobile-specific settings
NEXT_PUBLIC_APP_NAME=Loud & Clear
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_API_TIMEOUT=30000
# Copy this file to .env and update with your values

# Application
PORT=3244
NEXT_PUBLIC_APP_NAME="Command Center"
NODE_ENV=development

# Database Adapter Selection
# Set to 'true' to use Supabase, 'false' for file-based storage
USE_SUPABASE=true

# Supabase Configuration (required when USE_SUPABASE=true)
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
# CRITICAL: Keep this secret! Never commit to git or expose client-side
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here-keep-this-secret

# JWT Secret for authentication 
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=generate-a-strong-secret-key-here

# File-based Database (when USE_SUPABASE=false)
DATABASE_PATH=./data/database.json

# Feature Flags
# Authentication requirement (mainly for mobile/iOS)
REQUIRE_AUTH=false

# Platform detection
IS_MOBILE=false

# Todoist Integration
TODOIST_API_TOKEN=your-todoist-api-token-here
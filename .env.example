# Copy this file to .env and update with your values

# Next.js
NODE_ENV=development

# Database
DATABASE_PATH=./data/database.json

# Database Adapter Selection
# Set to 'true' to use Supabase, 'false' for file-based storage
USE_SUPABASE=false

# Supabase Configuration (required when USE_SUPABASE=true)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Feature Flags
# Authentication requirement (mainly for mobile/iOS)
REQUIRE_AUTH=false

# Platform detection
IS_MOBILE=false